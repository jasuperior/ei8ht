{
    "name": "ei8ht",
    "author": "ja.superior",
    "license": "MIT",
    "description": "a new expressive state management library",
    "main": "dist/lib.js",
    "module": "dist/lib.mjs",
    "typings": "dist/lib.d.ts",
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "lint": "eslint --fix 'src/**/*.ts'",
        "test": "jest --verbose",
        "prepare": "yarn build",
        "version": "git add -A",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@jest/globals": "^29.4.3",
        "@open-wc/building-rollup": "^2.2.1",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "deepmerge": "^4.3.0",
        "esbuild": "^0.17.11",
        "eslint": "^8.34.0",
        "jest": "^29.4.3",
        "rollup": "^3.18.0",
        "rollup-plugin-dts": "^5.2.0",
        "rollup-plugin-esbuild": "^5.0.0",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": [
                "ts-jest"
            ]
        },
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/test/**/*.test.ts"
        ]
    }
}
